<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="horizontal"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:paddingBottom="5dp">

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:scaleType="centerCrop"
		android:adjustViewBounds="true"
		android:id="@+id/main_list_item_iv_thumbnail"
		android:src="@mipmap/ic_pencil"/>

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical">


		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="20sp"
			android:textStyle="bold"
			android:hint="Title"
			android:singleLine="true"
			android:id="@+id/main_list_item_tv_title"/>


		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="13sp"
			android:textColor="@color/colorGreen"
			android:layout_weight="0"
			android:text="3 May 2015 - 23:59"
			android:singleLine="true"
			android:id="@+id/main_list_item_tv_edit_time"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="13sp"
			android:text="Content"
			android:ellipsize="end"
			android:maxLines="2"
			android:id="@+id/main_list_item_tv_content_line"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="12sp"
				android:text="Tag: "
				android:id="@+id/main_list_item_tv_tag_const"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="12sp"
				android:hint="foo, boo"
				android:singleLine="true"
				android:id="@+id/main_list_item_tv_tag"/>

		</LinearLayout>


	</LinearLayout>

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:scaleType="center"
		android:adjustViewBounds="true"
		android:id="@+id/main_list_item_iv_pin"
		android:src="@mipmap/ic_pin"/>

</LinearLayout>