<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kushal.Handy.MainActivity">

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/textnote"
        android:id="@+id/button_take_note"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/cam"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button_take_note"
        android:layout_toEndOf="@+id/button_take_note" />

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="@string/imprt"
        android:id="@+id/button3"
        android:layout_alignBottom="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="@string/handwrite"
        android:id="@+id/button4"
        android:layout_below="@+id/list"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list"
        android:clickable="true"
        android:textAlignment="viewStart"
        android:textFilterEnabled="false"
        android:layout_above="@+id/button_take_note"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="50dp"
        android:smoothScrollbar="true" />
</RelativeLayout>
