<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    >


    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/listView_main_note_list"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5.5"
        android:layout_weight="0"
        >


        <Button
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="@string/textnote"
            android:id="@+id/button_main_open_text_note"
            android:layout_weight="1"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>

        <Button
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="@string/cam"
            android:id="@+id/button_main_open_photo_note"
            android:layout_weight="1"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>

        <Button
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="@string/handwrite"
            android:id="@+id/button_main_open_hand_writing"
            android:layout_weight="1"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="57dp"
            android:text="CHECK LIST"
            android:id="@+id/button_checklist"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/button_handwrite"
            android:layout_toEndOf="@+id/button_handwrite"
            android:layout_below="@+id/listView" />



    </LinearLayout>

</LinearLayout>

