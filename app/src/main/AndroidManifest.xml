<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.kushal.rihabhbhandari">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="presentationlayer.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="presentationlayer.NoteTaker"/>
        <activity
                android:name="presentationlayer.PhotoNoteUI"
                android:label="@string/title_activity_add_photo_ui"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme">
        </activity>
        <activity android:name="businesslayer.PhotoNoteBL"
                  android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen"/>
        <activity
            android:name="presentationlayer.HandwritingUI"
            android:label="@string/title_activity_handwriting"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
